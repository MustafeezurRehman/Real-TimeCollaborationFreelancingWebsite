<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">
    <link href="css/signup.css" rel="stylesheet">

</head>

<body>
    <% include ./Layout/Header.ejs %>
    <section class="mt-5 ">
        <div class="container ">
            <div class="col-10 box bg-white  mx-auto">
                <div class="row  ">
                    <div class="col">
                        <div class="clearfix mt-3">
                            <h5 class=" font-weight-bold float-left clearfix">Logo</h5>
                            <div class="float-right ">
                                <a href="/signup" class="color-green removeAnker-underline font-weight-bold px-2">Sign Up</a>
                                <a href="/login" class="color-default px-2 removeAnker-underline color-default font-weight-bold "> Login</a>
                            </div>
                        </div>
                        <div class="mt-3">
                            <h1>Sign Up</h1>

                            <div class="ml-1 my-1 bar"></div>
                        </div>
                        <div class="mt-5 mb-4">
                           
                           <!--**********************************************-->
                           <!--**********************************************-->
                           <!--Form-->
                            <form method="POST" action="/signup">
                                <div class="form-row">
                                    <div class="col">
                                        <input class="form-control" type="text" required name="FIRSTNAME" placeholder="First name">
                                    </div>
                                    <div class="col">

                                        <input class=" mb-1 form-control " type="text" name="LASTNAME" placeholder="Last name">
                                    </div>
                                </div>

                                <input class="my-3 form-control " type="email" name="EMAIL" required placeholder="Email">
                                <input class="mb-3 form-control " type="password" name="PASS" required placeholder="Password">

                                <div class="col-lg-7 d-flex col-sm-3 col-md-12  mx-auto mt-4 ">
                                    <div class=" mx-auto d-inline-flex justify-content-between inputgroup ">
                                        <input class="input-hidden" required type="radio" id="iddeveloper" name="USERTYPE" value="Customer">
                                        <label for="iddeveloper">
                                    <img  src="images/hire.png" class="img-fluid" width="76" height="76">
                                     <div>
                                            <label class="font-weight-bold"> Want to Hire</label>
                                    </div>
                                    </label>

                                </div>


                                <div class=" mx-auto d-inline-flex  align-content-center inputgroup ">
                                    <input class="input-hidden" required type="radio" id="idcustomer" name="USERTYPE" value="Developer">
                                    <label for="idcustomer">
                                    <img  src="images/schedule.png" class="img-fluid" width="76" height="76">
                                     <div>
                                            <label class="font-weight-bold"> Want to work</label>
                                </div>
                                </label>

                        </div>
                    </div>
                    <input class="my-3  font-weight-bold text-white greenbtn btn btn-block" type="submit" value="Sign Up">


                    </form>
                    
                    
                    <!--**********************************************-->
                           <!--**********************************************-->
                           <!--Form-->
                </div>
            </div>

            <div class="col  d-none  d-md-block greenback " style="border-radius: 0px 20px 20px 0px;">

                <div class="p">
                    <img class=" mx-auto img-fluid text-center" src="images/undraw_To_the_stars_qhyy%20(1).svg " width="100% " height="100% ">
                </div>

            </div>
        </div>
        </div>
        </div>










    </section>




    <% include ./Layout/Footer.ejs %> 



</body>
</html>
