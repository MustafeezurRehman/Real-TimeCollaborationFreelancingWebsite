<html>

		<head>
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
	<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">
	<link href="/css/editprofile.css" rel="stylesheet">

</head>

<body>
<% include ./Layout/Header.ejs %>

	<div class="container my-4 rounded ">
		<div class="row align-items-start">
			<div class="col-lg-11 bg-shadow rounded bg-white ">
				<div class="row">
					<div class="col-lg-4  border border-light py-4  mr-2 ">
						<a href="/user/editprofile" class="shadow nav-link my-3 font-weight-bold text-center rounded text-white greenbtn px-2">
	  				 Edit Profile
	  			</a>
						<a href="/user/changepassword" class="nav-link my-3 font-weight-bold text-center rounded text-muted border shadow-sm px-2">
	  				Change Password
	  			</a>
						<a href="/user/addportfolio" class="nav-link my-3 font-weight-bold text-center rounded text-muted shadow-sm border px-1">
	  				Add Portfolio
	  			</a>
						<a href="/userid/<%= currentUser._id %>" class="nav-link my-3 font-weight-bold text-center rounded text-muted border shadow-sm px-1">
	  				Profile
	  			</a>

					</div>
					<div class="col-lg-7">

						<div class="bg-white mx-auto py-4">
							<h5 class="card-heading mx-3 mb-4">Edit Profile</h5>
							<% if(error.length>0) { %>
                                <div style="font-size: 13px;" class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <%= error %> 
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
												
                                          <span aria-hidden="true">&times;</span>
                                        </button>
                                      </div>
							  <%} %>
							  <% if(success.length>0) { %>
                                <div style="font-size: 13px;" class="alert alert-success alert-dismissible fade show" role="alert">
                                        <%= success %> 
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
												
                                          <span aria-hidden="true">&times;</span>
                                        </button>
                                      </div>
                              <%} %>

							<form method="POST" enctype="multipart/form-data" action="/user/updatepic">
								<div class="form-inline">
									<img src="/user/profile-pic/<%= currentUser._ProfilePic._FileName %>" class="rounded-circle border-0 mx-auto shadow mx-2 profile-pic" width="75" height="75">
									<div class="file-upload mx-2">
									
										<input id="upload" class=" border-0 " type="file" name="PROFILE-PIC">
									</div>
									<button type="submit" class="greenbtn rounded py-2 px-5 border-0  btn-secondary mx-auto shadow">Upload</button>
								</div>
							
							</form>
							<div  class=" pb-2">
								<hr/>
							</div>
							
							
							<form method="post"  action="/user/updateprofile" > 
								
								  <div class="form-row my-3 mx-2">
                                    <div class="col-6 my-1">
                                       <label >First name</label>
                                        <input class="form-control" type="text" value="<%= currentUser._FirstName %>" name="FIRSTNAME" placeholder="First name">
                                    </div>
                                    <div class="col-6 my-1">
										<label >Last name</label>
                                        <input class="form-control " type="text" value="<%= currentUser._LastName %>" name="LASTNAME" placeholder="Last name">
                                    </div>
                                    <div class="my-1 col-12">
                                    <label >Email</label>
                                     <input class="form-control " type="email" value="<%= currentUser._Email %>" name="EMAIL" placeholder="Email">
                                     </div>
                                     <div class="my-1 col-12">
                                     <label >location</label>
                                     <input class="form-control " type="text" name="LOCATION" value="<%= currentUser._Location %>" placeholder="Location">
                                     </div>
                                     <div class="mt-3 mb-1 col-12">
                                     <label >Description</label>
                                     <textarea class="form-control" name="DESC" ow="5"><%= currentUser._Description %></textarea>
                                     </div>
                                     <div class="my-1 col-12">
                                     <label >Education</label>
                                     <input class="form-control" value="<%= currentUser._Education %>" type="text" name="EDUCATION" placeholder="Education">
									 </div>
									 <div class="my-1 col-12">
										<label >Mobile No </label>
										<input class="form-control" value="<%= currentUser._Mobile %>" type="text" name="MOBILE" placeholder="Education">
										</div>
										<div  class=" pb-2">
											<hr/>
										</div>
                                   	 <div class="mt-3 mb-1 col-12">
                                     <label >Facebook</label>
                                     <input class="form-control" value="<%= currentUser._Facebook %>" type="text" name="FACEBOOK" placeholder="Facebook Link here">
                                     </div>
                                      <div class="my-1 col-12">
                                     <label >Google plus</label>
                                     <input class="form-control " type="text" name="GOOGLE" value="<%= currentUser._Google %>" placeholder="Google Plus Link here">
                                     </div>
                                      <div class="my-1 col-12">
                                     <label >Twitter</label>
                                     <input class="form-control " type="text" value="<%= currentUser._Twitter %>" name="TWITTER" placeholder="Twitter link here">
                                     </div>
                                    
                                     <input type="submit" value="update" class="btn border-0 py-2 shadow px-5 my-3 mx-auto btn-primary">                                     
                                </div>
							</form>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>







	<% include ./Layout/videocall.ejs %>


	<% include ./Layout/Footer.ejs %> 
</body>
</html>